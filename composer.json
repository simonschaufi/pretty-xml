{
    "name": "simonschaufi/pretty-xml",
    "description": "Library for pretty-printing XML",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "xml",
        "pretty"
    ],
    "authors": [
        {
            "name": "Shane Auckland",
            "email": "shane.auckland@gmail.com",
            "homepage": "https://shaneauckland.co.uk"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/polyfill-php80": "^1.31"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "PrettyXml\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PrettyXml\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "fix:composer:normalize": "@composer normalize --no-check-lock"
    },
    "scripts-descriptions": {
        "fix:composer:normalize": "Normalizes composer.json file content."
    }
}
